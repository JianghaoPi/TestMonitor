<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#ccc" /><!--填充色-->
            <corners android:radius="@dimen/activity_home_card_radius" />
        </shape>
    </item>
    <item android:top="@dimen/activity_home_card_border_width"
        android:right="@dimen/activity_home_card_border_width"
        android:bottom="@dimen/activity_home_card_border_width"
        android:left="@dimen/activity_home_card_border_width">
        <shape>
            <stroke android:color="#ccc" /><!--边框颜色-->
            <solid android:color="#fff" /><!--填充色-->
            <corners android:radius="@dimen/activity_home_card_radius" />
            <padding
                android:left="10dp"
                android:bottom="10dp"
                android:top="3dp"
                android:right="10dp"/>
        </shape>
    </item>
</layer-list>