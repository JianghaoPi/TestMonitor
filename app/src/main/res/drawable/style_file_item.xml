<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#CCC" />
        </shape>
    </item>
    <item android:bottom="1dp" android:top="1dp">
        <shape>
            <stroke android:color="#fff" /><!--边框颜色-->
            <solid android:color="#fff" /><!--填充色-->
            <corners android:radius="0dp" />
            <padding
                android:left="@dimen/activity_file_show_padding_left"
                android:bottom="@dimen/activity_file_show_padding_bottom"
                android:top="@dimen/activity_file_show_padding_top"
                android:right="@dimen/activity_file_show_padding_right"/>
        </shape>
    </item>
</layer-list>